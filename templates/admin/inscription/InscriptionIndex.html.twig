{% extends 'admin/Dashboard/administration1.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block body %}
	<div class="row">
		<div
			class="col-lg-3 col-xs-6">
			<!-- small box -->
			<div class="small-box bg-aqua">
				<div class="inner">
					<h3>{{countAllEleves['value']}}</h3>

					<p>Nombre d'élèves</p>
				</div>
				<div class="icon">
					<i class="ion ion-bag"></i>
				</div>
				<a href="{{path('app_eleves_index')}}" class="small-box-footer">Plus info
					<i class="fa fa-arrow-circle-right"></i>
				</a>
			</div>
		</div>
		<!-- ./col -->
		<div
			class="col-lg-3 col-xs-6">
			<!-- small box -->
			<div class="small-box bg-green">
				<div class="inner">
					<h3>{{countAllElevesInscris['valeur']}}<sup style="font-size: 20px"></sup>
					</h3>

					<p>Nombre d'élèves inscrits</p>
				</div>
				<div class="icon">
					<i class="ion ion-person"></i>
				</div>
				<a href="#" class="small-box-footer">Plus info
					<i class="fa fa-arrow-circle-right"></i>
				</a>
			</div>
		</div>
		<!-- ./col -->
		<div
			class="col-lg-3 col-xs-6">
			<!-- small box -->
			<div class="small-box bg-yellow">
				<div class="inner">
					<h3>{{countAllClasses['value']}}</h3>

					<p>Nombre de classes</p>
				</div>
				<div class="icon">
					<i class="ion ion-person"></i>
				</div>
				<a href="#" class="small-box-footer">Plus info
					<i class="fa fa-arrow-circle-right"></i>
				</a>
			</div>
		</div>
		<!-- ./col -->
		<div
			class="col-lg-3 col-xs-6">
			<!-- small box -->
			<div class="small-box bg-red">
				<div class="inner">
					<h3>{{CountAllProfesseurs['value']}}</h3>
					<p>Nombre d'enseignants</p>
				</div>
				<div class="icon">
					<i class="ion ion-pie-graph"></i>
				</div>
				<a href="#" class="small-box-footer">Plus info
					<i class="fa fa-arrow-circle-right"></i>
				</a>
			</div>
		</div><br>
		<!-- ./col -->
	</div>
	<div class="row">
		<center>
			<div class="row">
				<div class="col-lg-12">
					<a href="{{ path('app_inscription_new') }}">
						<i class="fa  fa-user-plus"></i>
						<span>Inscrire un élève</span>
					</a>
				</div>
			</div>
		</center>
	</div>
	<!-- Content Wrapper. Contains page content -->
	<div class="content">
		<section class="content">
			<div class="row">
				<div class="col-lg-12">
					<div class="box">
						<div class="box-header">
							<h3 class="box-title">Liste des
								{{countAllElevesInscris['valeur']}}
								élèves inscrits</h3>
						</div>
						<!-- /.box-header -->
						<div class="box-body">
							<div class="row">
								<div class="col-sm-6">
									<div class="dataTables_length" id="example1_length">
										<label>Show
											<select name="example1_length" aria-controls="example1" class="form-control input-sm">
												<option value="10">10</option>
												<option value="25">25</option>
												<option value="50">50</option>
												<option value="100">100</option>
											</select>
											entries</label>
									</div>
								</div>
								<div class="col-sm-6">
									<div id="example1_filter" class="dataTables_filter">
										<label>Search:<input type="search" class="form-control input-sm" placeholder="" aria-controls="example1"></label>
									</div>
								</div>
							</div>
							<table id="example1" class="table table-bordered table-hover">
								<thead>
									<tr>
										<th>Matricule</th>
										<th>Nom</th>
										<th>Prénom</th>
										<th>Adresse</th>
										<th>Téléphone</th>
										<th>Classe</th>
										<th>Année Scolaire</th>
										<th>Statut</th>
										<th>actions</th>
									</tr>
								</thead>
								<tbody>
									{% for inscription in TousEleves %}
										<tr>
											<td>{{ inscription.Eleve.id }}</td>
											<td>{{ inscription.Eleve.Nom }}</td>
											<td>{{ inscription.Eleve.Prenom }}</td>
											<td>{{ inscription.Eleve.Adresse }}</td>
											<td>{{ inscription.Eleve.Telephone }}</td>
											<td>{{ inscription.NomClasse.NomClasse }}</td>
											<td>{{ inscription.Annee.Annee }}</td>
											<td>{{ inscription.Statut }}</td>
											<td>
												<a href="{{ path('app_inscription_show', {'id': inscription.id}) }}" class="glyphicon glyphicon-eye-open text-warning"></a>
												<a href="{{ path('app_inscription_edit', {'id': inscription.id}) }}" class="glyphicon glyphicon-pencil"></a>
											</td>
										</tr>
									{% else %}
										<tr>
											<td colspan="9">no records found</td>
										</tr>
									{% endfor %}
								</tbody>
							</table>
							<div class="row">
								<div class="col-sm-5">
									<div class="dataTables_info" id="example1_info" role="status" aria-live="polite"></div>
								</div>
								<div class="col-sm-7">
									<div class="dataTables_paginate paging_simple_numbers" id="example1_paginate">
										<ul class="pagination">
											{% if previous >= 0 %}
												<li class="paginate_button previous" id="example1_previous">
													<a href="{{path('app_inscription_index', {offset: previous})}}" aria-controls="example1">Précédent</a>
												</li>
											{% endif %}
											{% if next < TousEleves|length %}
												<li class="paginate_button next" id="example1_next">
													<a href="{{path('app_inscription_index',{ offset: next})}}" aria-controls="example1">Suivant</a>
												</li>
											{% endif %}
										</ul>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
	</div>
{% endblock %}
