{{ form_start(form) }}
<!-- Main content -->
<section
	class="content">
	<!-- Informations personnelles -->
	<div class="box box-default">
		<div class="box-header with-border">
			<h3 class="box-title">Informations de l'événement</h3>

			<div class="box-tools pull-right">
				<button type="button" class="btn btn-box-tool" data-widget="collapse">
					<i class="fa fa-minus"></i>
				</button>
			</div>
		</div>
		<!-- /.box-header -->
		<div class="box-body">
			<div class="row">
				<div class="col-md-7">
					<div class="form-group">
						{{ form_row(form.title) }}
					</div>
					<div class="form-group">
						{{ form_row(form.description) }}
					</div>
				</div>
				<div class="col-md-3">
					<div class="form-group">
						{{ form_row(form.start) }}
					</div>
					<div class="form-group">
						{{ form_row(form.end) }}
					</div>
				</div>
				<div class="col-md-2">
					<div class="form-group">
						{{ form_row(form.all_day) }}
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- Coordonnées -->
	<div class="box box-default">
		<div class="box-header with-border">
			<h3 class="box-title">Apparence de l'événement</h3>

			<div class="box-tools pull-right">
				<button type="button" class="btn btn-box-tool" data-widget="collapse">
					<i class="fa fa-minus"></i>
				</button>
			</div>
		</div>
		<!-- /.box-header -->
		<div class="box-body">
			<div class="row">
				<div
					class="col-md-6">
					<!-- /.form-group -->
					<div class="form-group">
						{{ form_row(form.border_color) }}
					</div>
					<div class="form-group">
						{{ form_row(form.text_color) }}
					</div>
				</div>
				<div class="col-md-4">
					<div class="form-group">
						{{ form_row(form.background_color) }}
					</div>
				</div>
			</div>
			<!-- /.row -->
		</div>
	</div>
	<center>
		<button class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
	</center>
</section>
{{ form_end(form) }}
