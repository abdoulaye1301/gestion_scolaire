{% extends 'admin/Dashboard/administration1.html.twig' %}

{% block title %}Classe
{% endblock %}

{% block body %}
	<section class="content-header">
		<h1>Les d'étails de la classe
		</h1>
	</section>

	<!-- Main content -->
	<section
		class="content">
		<!-- Informations personnelles -->
		<div class="box box-default">
			<div class="box-header with-border">
				<div class="box-tools pull-right">
					<button type="button" class="btn btn-box-tool" data-widget="collapse">
						<i class="fa fa-minus"></i>
					</button>
				</div>
			</div>
			<!-- /.box-header -->
			<div class="box-body">
				<div class="row">
					<div class="col-md-6">
						<div class="form-group">
							<label>Matricule :
							</label>
							{{ classe.id }}
						</div>
						<div class="form-group">
							<label>Classe :
							</label>
							{{ classe.NomClasse }}
						</div>
					</div>
					<div class="col-md-6">
						<div class="form-group">
							<label>Capacite d'accueil :
							</label>
							{{ classe.CapaciteAccueil }}
						</div>
						<div class="form-group">
							<label>Scolarité :
							</label>
							{{ classe.MontantIsncription }}
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-4">
				<a href="{{ path('app_classe_index') }}">
					<i class="glyphicon glyphicon-chevron-left"></i>
					<span>Retour
					</span>
				</a>
			</div>
			<div class="col-lg-4">
				<a href="{{ path('app_classe_edit', {'id': classe.id}) }}">
					<i class="glyphicon glyphicon-pencil"></i>
					<span>Modifier
					</span>
				</a>
			</div>
			<div class="col-lg-4">
				{{ include('admin/classe/_delete_form.html.twig') }}
			</div>
		</div>
	</section>
{% endblock %}
