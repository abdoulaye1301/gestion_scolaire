{% extends 'admin/Dashboard/administration1.html.twig' %}

{% block title %}Emplois du temps
{% endblock %}

{% block body %}
	<center>
		<h1>Les détails de l'emploi du temps</h1>
	</center>
	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ emploi_temp.id }}</td>
			</tr>
			<tr>
				<th>Jour</th>
				<td>{{ emploi_temp.Jour }}</td>
			</tr>
			<tr>
				<th>Heure de Début</th>
				<td>{{ emploi_temp.HeureDebut ? emploi_temp.HeureDebut|date('H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>Heure de Fin</th>
				<td>{{ emploi_temp.HeureFin ? emploi_temp.HeureFin|date('H:i:s') : '' }}</td>
			</tr>
		</tbody>
	</table>
	<div class="row">
		<div class="col-lg-4">
			<a href="{{ path('app_emploi_temps_index') }}">
				<i class="glyphicon glyphicon-chevron-left"></i>
				<span>Retour
				</span>
			</a>
		</div>
		<div class="col-lg-4">
			<a href="{{ path('app_emploi_temps_new', {'id': emploi_temp.id}) }}">
				<i class="glyphicon glyphicon-pencil"></i>
				<span>Modifier
				</span>
			</a>
		</div>
		<div class="col-lg-4">
			{{ include('admin/emploi_temps/_delete_form.html.twig') }}
		</div>
	</div>
{% endblock %}
