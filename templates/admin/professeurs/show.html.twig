{% extends 'admin/Dashboard/administration1.html.twig' %}

{% block title %}Professeurs
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-lg-4">
			<a href="{{ path('app_professeurs_index') }}">
				<i class="glyphicon glyphicon-chevron-left"></i>
				<span>Retour
				</span>
			</a>
		</div>
		<div class="col-lg-4">
			<a href="{{ path('app_professeurs_edit', {'id': professeur.id}) }}">
				<i class="glyphicon glyphicon-pencil"></i>
				<span>Modifier
				</span>
			</a>
		</div>
		<div class="col-lg-4">
			{{ include('admin/professeurs/_delete_form.html.twig') }}
		</div>
	</div>
	<section class="content-header">
		<h1>
			Informations de
			{{professeur.Prenom}}
			{{professeur.Nom}}
		</h1>
	</section>

	<!-- Main content -->
	<section
		class="content">
		<!-- Informations personnelles -->
		<div class="box box-default">
			<div class="box-header with-border">
				<h3 class="box-title">Informations personnelles</h3>

				<div class="box-tools pull-right">
					<button type="button" class="btn btn-box-tool" data-widget="collapse">
						<i class="fa fa-minus"></i>
					</button>
				</div>
			</div>
			<!-- /.box-header -->
			<div class="box-body">
				<div class="row">
					<div class="col-md-4">
						<div class="form-group">
							<label>Matricule :
							</label>
							{{ professeur.id }}
						</div>
						<div class="form-group">
							<label>Lieu de naissance :
							</label>
							{{ professeur.LieuNaissance }}
						</div>
						<div class="form-group">
							<label>Date de naissance :
							</label>
							{{ professeur.DateNaissance ? professeur.DateNaissance|date('Y-m-d') : ''  }}
						</div>
					</div>
					<div class="col-md-3">
						<div class="form-group">
							<label>Prénom :
							</label>
							{{ professeur.Prenom }}
						</div>
						<div class="form-group">
							<label>Nom :
							</label>
							{{ professeur.Nom }}
						</div>
						<div class="form-group">
							<label>Sexe :
							</label>
							{{ professeur.Sexe }}
						</div>
					</div>
					<div class="col-md-3">
						<div class="form-group">
							<label>Photo :</label>
							<img style="width: 100px; heigth: 100px;" src="{{asset('uploads/enseignants/'~ professeur.photo)}}" alt="">
						</div>
					</div>
				</div>
			</div>
		</div>
		<!-- Coordonnées -->
		<div class="box box-default">
			<div class="box-header with-border">
				<h3 class="box-title">Coordonnées</h3>

				<div class="box-tools pull-right">
					<button type="button" class="btn btn-box-tool" data-widget="collapse">
						<i class="fa fa-minus"></i>
					</button>
				</div>
			</div>
			<!-- /.box-header -->
			<div class="box-body">
				<div class="row">
					<div
						class="col-md-6">
						<!-- /.form-group -->
						<div class="form-group">
							<label>Adresse :
							</label>
							{{ professeur.Adresse }}
						</div>
						<div class="form-group">
							<label>E-mail :
							</label>
							{{ professeur.email }}
						</div>
					</div>
					<div class="col-md-4">
						<div class="form-group">
							<label>Ville :
							</label>
							{{ professeur.Ville }}
						</div>
						<div class="form-group">
							<label>Téléphone :
							</label>
							{{ professeur.Telephone }}
						</div>
					</div>
				</div>
				<!-- /.row -->
			</div>
		</div>
		<!-- Informations parents et tuteur -->
		<div class="box box-default">
			<div class="box-header with-border">
				<h3 class="box-title">Informations professionnelles</h3>

				<div class="box-tools pull-right">
					<button type="button" class="btn btn-box-tool" data-widget="collapse">
						<i class="fa fa-minus"></i>
					</button>
				</div>
			</div>
			<!-- /.box-header -->
			<div class="box-body">
				<div class="row">
					<div
						class="col-md-6">
						<!-- /.form-group -->
						<div class="form-group">
							<label>Contrat :
							</label>
							{{ professeur.Contrat.TypeContrat }}
						</div>
						<div class="form-group">
							<label>Profession :
							</label>
							{{ professeur.Profession }}
						</div>
						<div class="form-group">
							<label>Nationalite :
							</label>
							{{ professeur.Nationalite }}
						</div>
						<div class="form-group">
							<label>Date d'enregistrement :
							</label>
							{{ professeur.DateEnregistrement ? professeur.DateEnregistrement|date('d-m-Y H:i:s') : ''  }}
						</div>
					</div>
					<div class="col-md-4">
						<div class="form-group">
							<label>Diplome :
							</label>
							{{ professeur.Diplome }}
						</div>
						<div class="form-group">
							<label>Salaire :
							</label>
							{{ professeur.Salaire }}
						</div>
						<div class="form-group">
							<label>Début contrat :
							</label>
							{{ professeur.DebutContrat ? professeur.DebutContrat|date('d-m-Y') : ''   }}
						</div>
						<div class="form-group">
							<label>Fin contrat :
							</label>
							{{ professeur.FinContrat ? professeur.FinContrat|date('d-m-Y') : ''   }}
						</div>
					</div>
				</div>
			</div>
		</section>
	{% endblock %}
