{% extends 'admin/Dashboard/administration1.html.twig' %}

{% block title %}Eleves
{% endblock %}

{% block body %}
	<section class="content-header">
		<div class="row">
			<div class="col-lg-4">
				<a href="{{ path('app_eleves_index') }}">
					<i class="glyphicon glyphicon-chevron-left"></i>
					<span>Retour
					</span>
				</a>
			</div>
			<div class="col-lg-4">
				<a href="{{ path('app_eleves_edit', {'id': elefe.id}) }}">
					<i class="glyphicon glyphicon-pencil"></i>
					<span>Modifier
					</span>
				</a>
			</div>
			<div class="col-lg-4">
				{{ include('admin/eleves/_delete_form.html.twig') }}
			</div>
		</div>
		<h1>
			Informations de
			{{elefe.Prenom}}
			{{elefe.Nom}}
		</h1>
	</section>

	<!-- Main content -->
	<section
		class="content">
		<!-- Informations personnelles -->
		<div class="box box-default">
			<div class="box-header with-border">
				<h3 class="box-title">Informations personnelles</h3>

				<div class="box-tools pull-right">
					<button type="button" class="btn btn-box-tool" data-widget="collapse">
						<i class="fa fa-minus"></i>
					</button>
				</div>
			</div>
			<!-- /.box-header -->
			<div class="box-body">
				<div class="row">
					<div class="col-md-4">
						<div class="form-group">
							<label>Matricule :
							</label>
							{{ elefe.id }}
						</div>
						<div class="form-group">
							<label>Lieu de naissance :
							</label>
							{{ elefe.LieuNaissance }}
						</div>
						<div class="form-group">
							<label>Date de naissance :
							</label>
							{{ elefe.DateNaissance ? elefe.DateNaissance|date('Y-m-d') : ''  }}
						</div>
					</div>
					<div class="col-md-4">
						<div class="form-group">
							<label>Prénom :
							</label>
							{{ elefe.Prenom }}
						</div>
						<div class="form-group">
							<label>Nom :
							</label>
							{{ elefe.Nom }}
						</div>
						<div class="form-group">
							<label>Sexe :
							</label>
							{{ elefe.Sexe }}
						</div>
					</div>
					<div class="col-md-4">
						<div class="form-group">
							<label>Photo :</label>
							<img style="width: 100px; heigth: 100px;" src="{{asset('uploads/eleves/'~ elefe.imageFileName)}}" alt="">
						</div>
					</div>
				</div>
			</div>
		</div>
		<!-- Coordonnées -->
		<div class="box box-default">
			<div class="box-header with-border">
				<h3 class="box-title">Coordonnées</h3>

				<div class="box-tools pull-right">
					<button type="button" class="btn btn-box-tool" data-widget="collapse">
						<i class="fa fa-minus"></i>
					</button>
				</div>
			</div>
			<!-- /.box-header -->
			<div class="box-body">
				<div class="row">
					<div
						class="col-md-6">
						<!-- /.form-group -->
						<div class="form-group">
							<label>Adresse :
							</label>
							{{ elefe.Adresse }}
						</div>
						<div class="form-group">
							<label>E-mail :
							</label>
							{{ elefe.email }}
						</div>
					</div>
					<div class="col-md-4">
						<div class="form-group">
							<label>Ville :
							</label>
							{{ elefe.Ville }}
						</div>
						<div class="form-group">
							<label>Téléphone :
							</label>
							{{ elefe.Telephone }}
						</div>
					</div>
				</div>
				<!-- /.row -->
			</div>
		</div>
		<!-- Informations parents et tuteur -->
		<div class="box box-default">
			<div class="box-header with-border">
				<h3 class="box-title">Informations supplémentaire</h3>

				<div class="box-tools pull-right">
					<button type="button" class="btn btn-box-tool" data-widget="collapse">
						<i class="fa fa-minus"></i>
					</button>
				</div>
			</div>
			<!-- /.box-header -->
			<div class="box-body">
				<div class="row">
					<div
						class="col-md-6">
						<!-- /.form-group -->
						<div class="form-group">
							<label>Prénom du Père :
							</label>
							{{ elefe.PrenomPere }}
						</div>
						<div class="form-group">
							<label>Prénom du Mère :
							</label>
							{{ elefe.PrenomMere }}
						</div>
						<div class="form-group">
							<label>Nom du Mère :
							</label>
							{{ elefe.NomMere }}
						</div>
						<div class="form-group">
							<label>Date de naissance :
							</label>
							{{ elefe.DateEnregistrement ? elefe.DateEnregistrement|date('Y-m-d H:i:s') : ''  }}
						</div>
					</div>
					<div class="col-md-4">
						<div class="form-group">
							<label>Téléphone du Parent :
							</label>
							{{ elefe.TelephoneParent.Telephone }}
						</div>
						<div class="form-group">
							<label>Prénom du Tuteur :
							</label>
							{{ elefe.PrenomTuteur }}
						</div>
						<div class="form-group">
							<label>Nom du Tuteur :
							</label>
							{{ elefe.NomTuteur }}
						</div>
						<div class="form-group">
							<label>Téléphone du Tuteur :
							</label>
							{{ elefe.TelephoneTuteur }}
						</div>
					</div>
				</div>
			</div>
		</section>
	{% endblock %}
