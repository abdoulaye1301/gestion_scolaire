{% extends 'admin/Dashboard/administration1.html.twig' %}

{% block title %}Cours
{% endblock %}

{% block body %}
	<h1>Les d√©tails du cours</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ cour.id }}</td>
			</tr>
			<tr>
				<th>DebutCours</th>
				<td>{{ cour.DebutCours ? cour.DebutCours|date('H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>Fin</th>
				<td>{{ cour.FinCours ? cour.FinCours|date('H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>DateCours</th>
				<td>{{ cour.DateCours ? cour.DateCours|date('Y-m-d') : '' }}</td>
			</tr>
		</tbody>
	</table>
	<div class="row">
		<div class="col-lg-4">
			<a href="{{ path('app_cours_index') }}">
				<i class="glyphicon glyphicon-chevron-left"></i>
				<span>Retour
				</span>
			</a>
		</div>
		<div class="col-lg-4">
			<a href="{{ path('app_cours_edit', {'id': cour.id}) }}">
				<i class="glyphicon glyphicon-pencil"></i>
				<span>Modifier
				</span>
			</a>
		</div>
		<div class="col-lg-4">
			{{ include('admin/cours/_delete_form.html.twig') }}
		</div>
	</div>
{% endblock %}
