{% extends 'base.html.twig' %}

{% block title %}Inscription des élèves
{% endblock %}
{% block header%}
	{% include "admin/parents/headerAdminParents.html.twig" %}
{% endblock %}
{% block body %}
	<br><br><br><br><br>
	<section class="container my-3" style=" margin-top:400px; margin-left:300px;">
		<div class="row">
			<div class="col-lg-6">
				<h1>Paiement des inscriptions</h1>

				{{ form_errors(InscriptionForm) }}
				<div class="form-group">
					{{ form_start(InscriptionForm) }}
				</div>
				<div class="form-group">
					{{ form_row(InscriptionForm.Nom) }}
				</div>
				<div class="form-group">
					{{ form_row(InscriptionForm.Prenom) }}
				</div>
				<div class="form-group">
					{{ form_row(InscriptionForm.Annee) }}
				</div>
				<div class="form-group">
					{{ form_row(InscriptionForm.id) }}
				</div>
				<div class="form-group">
					{{ form_row(InscriptionForm.NomClasse) }}
				</div>
				<button type="submit" class="btn btn-lg btn-primary">Payer</button>
				{{ form_end(InscriptionForm) }}
			</div>
		</div>
	</section>
{% endblock %}
